<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		 http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
          http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
          >
         <context:property-placeholder 
			location="classpath:META-INF/local_conf/local_jdbc.properties,classpath:META-INF/local_conf/local_connect-redis.properties,classpath:META-INF/conf/resources.properties" />
		<bean id="redisResources"
			class="org.springframework.beans.factory.config.PropertiesFactoryBean">
			<property name="location" value="classpath:META-INF/local_conf/local_connect-redis.properties" />
		</bean>
		<bean id="fastDbResource"
			class="com.sky.common.util.ResouceUtils">
			<property name="fastDbResource" value="classpath:local_fdfs_client.conf" />
		</bean>
		<!-- 参数值路径 -->
		<bean id="valuesProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
			<property name="location" value="classpath:META-INF/local_conf/local_values.properties"/>
		</bean>
		<!-- 卡夫卡 -->
		<!-- 消费 -->
		<bean id="kafkaConsumerProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
			<property name="location" value="classpath:META-INF/local_conf/local_kafka-consumer.properties"/>
		</bean>
		<!-- 生产 -->
		<bean id="kafkaProducerProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		     <property name="location" value="classpath:META-INF/local_conf/local_kafka-producer.properties"/>
		</bean>
</beans>

